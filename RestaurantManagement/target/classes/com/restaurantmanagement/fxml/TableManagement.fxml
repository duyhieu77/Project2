<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.restaurantmanagement.app.controller.TableController">
    <Label text="Quản lý Bàn ăn" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <TableView fx:id="tableTable">
        <TableColumn text="ID Bàn" fx:id="tableIdColumn" />
        <TableColumn text="Số ghế" fx:id="seatsColumn" />
        <TableColumn text="Trạng thái" fx:id="statusColumn" />
    </TableView>

    <Button text="Thêm Bàn" onAction="#handleAddTable" />
    <Button text="Sửa Bàn" onAction="#handleEditTable" />
    <Button text="Xóa Bàn" onAction="#handleDeleteTable" />
</VBox>
