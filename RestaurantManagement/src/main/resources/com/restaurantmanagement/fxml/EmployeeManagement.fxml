<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.restaurantmanagement.app.controller.EmployeeController">
    <Label text="Quản lý Nhân viên" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <TableView fx:id="employeeTable">
        <TableColumn text="ID" fx:id="idColumn" />
        <TableColumn text="Tên" fx:id="nameColumn" />
        <TableColumn text="Chức vụ" fx:id="roleColumn" />
        <TableColumn text="Trạng thái" fx:id="statusColumn" />
    </TableView>

    <Button text="Thêm Nhân viên" onAction="#handleAddEmployee" />
    <Button text="Sửa Thông tin" onAction="#handleEditEmployee" />
    <Button text="Xóa Nhân viên" onAction="#handleDeleteEmployee" />
</VBox>
